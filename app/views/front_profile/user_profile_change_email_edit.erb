<div class='row front_content_main_row front_parties_list_main_row'>
  <div class="w500_centerd">
    <div class="row front_page_title_row hidden_in_modal">
      <div class="col-12">
        <h3>Change email</h3>
      </div>
    </div>
    <div class="row front_page_content_row">
      <div class="col-12">
        <%= render "/layouts/my_error_messages_row", item: current_user %>
        <%= form_for(current_user, url: profile_change_email_path, html: { method: :post, class: "row front_edit_form" }) do |f| %>
          <div class="col-12">
            Change email for for <%= current_user.email %><br/><br/>
            <div class="field form-group">
              <%= f.label :new_email %><br />
              <%= f.email_field :unconfirmed_email, autofocus: true, class: "form-control form-control-sm" %>
              <% if @minimum_password_length %>
                <br />
                <em>We will send a mail for confirm this new email before it will be changed</em>
              <% end %>
            </div>
            <br/><br/>
            <div class="actions">
              <%= f.submit "Update email" %>
            </div>
            <br/><br/>
            <%= link_to "Back to the profile page", :user_root %>
            <br/><br/><br/><br/><br/>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

