<div class='row front_content_main_row front_parties_list_main_row'>
  <div class="w500_centerd">
    <div class="row front_page_title_row hidden_in_modal">
      <div class="col-12">
        <h3>Change password</h3>
      </div>
    </div>
    <div class="row front_page_content_row">
      <div class="col-12">
        <%= render "/layouts/my_error_messages_row", item: current_user %>
        <%= form_for(current_user, url: profile_password_change_path, html: { method: :post, class: "row front_edit_form" }) do |f| %>
          <div class="col-12">
            Change password for for <%= current_user.email %><br/><br/>
            <% if current_user.password_changed_at %>
              <span class='password_changed_at_span'>Password changed at: <%= current_user.password_changed_at.client_stamp_html %></span>
              <br/>
            <% end %>
            <div class="field form-group">
              <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-sm" %>
              <% if @minimum_password_length %>
                <br />
                <em><%= @minimum_password_length %> characters minimum</em>
              <% end %>
            </div>

            <div class="field form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm" %>
            </div>
            <% unless current_user.current_password_unknown.positive? %>
              <div class="field form-group">
                <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
                <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control form-control-sm" %>
              </div>
            <% end %>
            <br/><br/>
            <div class="actions">
              <%= f.submit "Update password" %>
            </div>
            <br/><br/>
            <%= link_to "Back to the profile page", :user_root %>
            <br/><br/><br/><br/><br/>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

