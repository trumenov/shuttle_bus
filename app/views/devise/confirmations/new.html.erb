<div class='row front_content_main_row front_parties_list_main_row'>
  <div class="w500_centerd">
    <div class="row front_page_title_row hidden_in_modal">
      <div class="col-12">
        <h3>Resend confirmation instructions</h3>
      </div>
    </div>
    <div class="row front_page_content_row">
      <div class="col-12">
        <div class="row">
          <div class="col-12">
            <%= render "devise/shared/error_messages", resource: resource %>
          </div>
        </div>
        <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "row front_edit_form" }) do |f| %>
          <div class="col-12">
            <div class="field form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
            </div>
            <br />

            <div class="actions">
              <%= f.submit "Resend confirmation instructions" %>
            </div>
            <br /><br /><br />
          </div>
        <% end %>
        <div class="row">
          <div class="col-12">
            <%= render "devise/shared/links" %>
            <br /><br /><br /><br /><br /><br />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
