<div class='row front_content_main_row profile_event_tpacks_main_row'>
  <div class="w350_centerd" id="content">
    <div class="row front_page_content_row">
      <div class="col-12">
        <div class="row hidden_in_modal">
          <div class="col-12">
            <h4>TicketBuyPage</h4>
            <small><%= @tpack.name.to_s.ehtml %></small>
          </div>
        </div>
        <%= render "/layouts/my_error_messages_row", item: @tpack %>
        <form class="row front_edit_form" action="<%= profile_my_tickets_path %>" method='POST'>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <%= hidden_field_tag :tpack_id, @tpack.id %>
          <% if @tpack.event_ticket_pack_sale_rule_with_confirmation? %>
            <div class="col-12 order_ticket_block">
              <div class="row">
                <div class="col-12">
                  <div class="form-group">
                    <label>
                      This ticket need confirmation from party owner. You will pay after owner will accepted you to pay this ticket.
                    </label>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-12 text-center">
                  <br /><br />
                  <button type="submit" class='btn btn-sm btn-success'>
                    Order this ticket for&nbsp;&nbsp;&nbsp;<%= @tpack.ticket_cost_eur.to_price_html("EUR") %>
                  </button>
                </div>
              </div>
            </div>
          <% else %>
            <div class="col-12 text-center">
              <br /><br />
              <button type="submit" class='btn btn-sm btn-success'>
                Pay&nbsp;&nbsp;&nbsp;<%= @tpack.ticket_cost_eur.to_price_html("EUR") %>
              </button>
            </div>
          <% end %>
        </form>
        <div class="row hidden_in_modal">
          <div class="col-12">
            <br /><br /><br /><br /><br /><br />
            <%= link_to "Back to the event ticket choose page", party_tickets_path(@tpack.event.id) %>
            <br/><br/><br/><br/><br/>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

