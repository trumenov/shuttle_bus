<div class='row front_content_main_row front_stations_list_main_row'>
  <div class="col-12">
    <div class="row front_page_title_row">
      <div class="col-12">
        <h3>Search for stations</h3>
      </div>
    </div>
    <div class="row front_page_content_row">
      <div class="col-12 front_stations_list_block">
        <form class="row stations_search_row" method='GET' action='<%= stations_path %>'>
          <div class="col-8 col-md-6 col-lg-3">
            <input type='text' class='form-control form-control-sm' placeholder='Search' name='search' value="<%= params[:search].to_s.ehtml %>" />
          </div>
          <div class="col-2 col-md-2 col-lg-1">
            <button class='btn btn-sm btn-success' type='submit'>Search</button>
          </div>
          <div class="col-2 col-md-2 col-lg-1">
            <a class='btn btn-sm btn-light' href='<%= stations_path %>'>Clear</a>
          </div>
        </form>
        <div class="row front_stations_head_row">
          <div class="col-5">
            Found <%= @items.total_count %> stations
          </div>
          <div class="col-7 pagination_col">
            <%= paginate @items %>
          </div>
        </div>
        <div class="row front_stations_list_row">
          <% @items.each do |item| %>
            <div class="col-12 col-md-6 col-lg-4 col-xl-3 catalog_item_wrapper front_stations_list_item">
              <%= render(:partial => 'front_stations_list_item', locals: { item: item }) %>
            </div>
          <% end %>
        </div>
        <div class="row front_stations_bottom_row">
          <div class="col-5">&nbsp;</div>
          <div class="col-7 pagination_col">
            <%= paginate @items %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


